<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DayTheme" parent="AppTheme">
        <item name="text_color">@color/blue</item>
        <item name="background_color">@color/green</item>
        <item name="text_size">20sp</item>
        <item name="background_drawable">@drawable/image_01</item>
    </style>


    <style name="NightTheme" parent="AppTheme">
        <item name="text_color">@color/red</item>
        <item name="background_color">@color/black</item>
        <item name="text_size">40sp</item>
        <item name="background_drawable">@drawable/image_02</item>
    </style>

</resources>
