<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="DayTheme" parent="AppTheme">
        <item name="text_color">@color/black</item>
        <item name="background_color">@color/white</item>
        <item name="text_size">18sp</item>
        <item name="image_backgroud">@drawable/image_day</item>
    </style>


    <style name="NightTheme" parent="AppTheme">
        <item name="text_color">@color/white</item>
        <item name="background_color">@color/gray</item>
        <item name="text_size">25sp</item>
        <item name="image_backgroud">@drawable/image_night</item>
    </style>

</resources>
